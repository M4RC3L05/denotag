{
  "name": "@m4rc3l05/denotag",
  "version": "4.6.16",
  "exports": "./src/main.ts",
  "tasks": {
    "build": {
      "description": "Build frontend",
      "command": "vite build"
    },
    "run": {
      "description": "Runs the program",
      "command": "deno run --allow-read=./data --cached-only --allow-env=ENV --allow-net=127.0.0.1 src/main.ts",
      "dependencies": [
        "build"
      ]
    },
    "compile": {
      "description": "Compiles the program",
      "command": "deno compile --cached-only --allow-env=ENV --allow-net=127.0.0.1 --env=.env -o ./.bin/denotag ./src/main.ts",
      "dependencies": [
        "build"
      ]
    },
    "check:fmt": {
      "description": "Run formatting checks",
      "command": "deno fmt --check"
    },
    "check:lint": {
      "description": "Run lint checks",
      "command": "deno lint"
    },
    "check:check": {
      "description": "Run check checks",
      "command": "deno check ./src"
    },
    "checks": {
      "description": "Run code checks",
      "dependencies": [
        "check:fmt",
        "check:lint",
        "check:check"
      ]
    }
  },
  "compilerOptions": {
    "lib": [
      "deno.ns",
      "dom",
      "dom.iterable"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "jsxImportSourceTypes": "@types/react",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "nodeModulesDir": "auto",
  "unstable": [
    "raw-imports"
  ],
  "lint": {
    "rules": {
      "include": [
        "verbatim-module-syntax"
      ],
      "tags": [
        "recommended",
        "jsx",
        "jsr",
        "react"
      ]
    }
  },
  "imports": {
    "@david/dax": "jsr:@david/dax@0.43.2",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@1.0.5",
    "@mjackson/multipart-parser": "jsr:@mjackson/multipart-parser@0.10.1",
    "@preact/preset-vite": "npm:@preact/preset-vite@2.10.2",
    "@std/cli": "jsr:@std/cli@1.0.21",
    "@std/path": "jsr:@std/path@1.1.1",
    "@types/react": "npm:@types/react@19.1.9",
    "bootstrap": "npm:bootstrap@5.3.7",
    "node-taglib-sharp": "npm:node-taglib-sharp@6.0.1",
    "preact": "npm:preact@10.27.0",
    "react-bootstrap": "npm:react-bootstrap@2.10.10",
    "vite": "npm:vite@7.0.6",
    "vite-plugin-singlefile": "npm:vite-plugin-singlefile@2.3.0"
  }
}

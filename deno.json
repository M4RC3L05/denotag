{
  "name": "@m4rc3l05/denotag",
  "version": "4.6.12",
  "exports": "./src/main.ts",
  "tasks": {
    "run": {
      "description": "Runs the program",
      "command": "./client/scripts/bundle.ts && deno run --allow-read=./data --cached-only --allow-env=ENV --allow-net=127.0.0.1 src/main.ts"
    },
    "compile": {
      "description": "Compiles the program",
      "command": "./client/scripts/bundle.ts && deno compile --cached-only --unstable-npm-lazy-caching --allow-env=ENV --allow-net=127.0.0.1 --include ./data/index.html --env=.env -o ./.bin/denotag ./src/main.ts"
    },
    "check:fmt": {
      "description": "Run formatting checks",
      "command": "deno fmt --check"
    },
    "check:lint": {
      "description": "Run lint checks",
      "command": "deno lint"
    },
    "check:check": {
      "description": "Run check checks",
      "command": "deno check ./src"
    },
    "checks": {
      "description": "Run code checks",
      "dependencies": ["check:fmt", "check:lint", "check:check"]
    }
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["dom", "dom.iterable", "deno.ns"]
  },
  "lint": {
    "rules": {
      "include": ["verbatim-module-syntax"]
    },
    "exclude": ["client"]
  },
  "fmt": {
    "exclude": ["data", "client"]
  },
  "imports": {
    "@david/dax": "jsr:@david/dax@0.43.2",
    "@mjackson/multipart-parser": "jsr:@mjackson/multipart-parser@0.8.2",
    "@std/cli": "jsr:@std/cli@1.0.19",
    "@std/path": "jsr:@std/path@1.1.0",
    "node-taglib-sharp": "npm:node-taglib-sharp@6.0.1"
  }
}

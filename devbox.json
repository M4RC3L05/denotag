{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "deno@1.45",
    "yamllint@latest",
    "yamlfmt@latest"
  ],
  "shell": {
    "init_hook": [],
    "scripts": {
      "check:format": [
        "set -x",
        "deno fmt --check",
        "yamlfmt -dry -lint .",
        "deno run -A --no-lock npm:prettier -c \"./src/public/**/*.{html,css}\""
      ],
      "check:lint": [
        "set -x",
        "deno lint",
        "yamllint .",
        "deno run -A --no-lock npm:html-validate .",
        "deno run -A --no-lock npm:markdownlint-cli2 \"**/*.{md,markdown}\" \"#.git-hooks\""
      ]
    }
  }
}
